{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    // Required to emit .d.ts files for consumers
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node",
      "express",
      "@repo/express-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}